<h1 class="legal__title hidden">
  {{ page.title }}
</h1>

<div class="legal-page wrapper-s">
  {% if linklists[section.settings.menu].links %}
    <div class="legal-menu account-sidebar">
      {% render 'legal-menu',
        blocks: linklists[section.settings.menu].links
      %}
    </div>
  {% endif %}
  
  <div class="legal-content">
    <div
      class="legal-content__wrapper"
    >
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Legal section",
  "tag": "section",
  "class": "legal",
  "templates": ["page"],
  "settings": [
    {
      "type": "header",
      "content": "Legal settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main hidden title",
      "info": "This is required for SEO",
      "default": "Mention l√©gales"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu handle",
      "info": "This is menu handle from navigation"
    }
  ],
  "presets": [
    {
      "name": "Legal section"
    }
  ]
}
{% endschema %}
