{% comment %}
  Render modal product description

  {% render 'modal-description-product'
    modal_id: '',
    modal_id_close: '',
    moda_title: '',
    modal_icon: '',
    modal_description: ''
    grid: component || capture
    css_class
  %}
{% endcomment %}

<div
  class="description-modal {{ css_class }}"
  id="{{ modal_id }}"
  data-active="false"
>

  {% if modal_id_close %}
    <button
      class="description-modal__close"
      id="{{ modal_id_close }}"
    >
      {% render 'icon-close' %}
    </button>
  {% endif %}

  {% if moda_title != blank %}
    <span class="description-modal__title">
      {{ moda_title }}
    </span>
  {% endif %}

  <div class="description-modal__description">
    {% assign icon = section.settings.modal_icon | split: '|' %}
    {% assign icon_url = icon | first | append: '.svg' | file_url %}
    {% assign icon_alt = icon | last %}

    {% if modal_icon != blank %}
      {% render "render-image"
        class: 'description-modal__description-icon',
        title: icon_alt,
        img_src: icon_url,
        size: "220 300 400 500",
        alt: icon_alt,
        width: "100",
        height: "100"
      %}
    {% endif %}

    {% if modal_description != blank %}
      <div class="description-modal__description-text">
        {{ modal_description }}
      </div>
    {% endif %}
  </div>

  {{ grid }}
</div>
