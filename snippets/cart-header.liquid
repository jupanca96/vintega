{% comment %}
  Render side cart header

  Accepts:
  - title: {String} title of header

  Usage:
  {% render 'cart-header'
    title: section.settings.cart_title
  %}
{% endcomment %}

<div class="cart-header">
  <span class="cart-close">
    {% render 'icon-close' %}
  </span>
  <div>

    <div class="cart-header__title">
      <span class="h5 cart-header__title--text">
        {{ title }}
      </span>
    </div>
  </div>
</div>
