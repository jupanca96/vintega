{% comment %}
  Renders a render images

  Accepts:
  - value: {String} Input value
  - name: {String} Input name
  - label: {String} Text
  - checked: {Boolean} Input cheched (optional)

  Usage:
  {% render "radio-button",
    class: 'form__radio-button'
    value: "input_value",
    name: "input_name"
    label: "Lable input",
    checked: false
  %}
{% endcomment %}

<label
  for="{{ value | replace: ' ', '-' }}"
  class="{{ class }}"
  title="{{ label }}"
>
  <input
    type="radio"
    value="{{ value }}"
    id="{{ value | replace: ' ', '-' }}"
    name="{{ name }}"
    {% if checked %}
      checked
    {% endif %}
  />
  <div class="checkmark"></div>
  <div class="label">{{ label }}</div>
</label>
