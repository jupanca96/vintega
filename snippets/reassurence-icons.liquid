{% comment %}
  Accordion-item

  Accepts:

  Usage:
  {% render 'reassurence-icons',
    block: block
  %}

  Block structure:

{% endcomment %}
{% assign count = 0 %}

{% capture items %}
  {% if block.settings.icon_1 != blank %}
    <div class="sellers-buyers__icon">
      {% assign icon_1 = block.settings.icon_1 | split: '|' %}
      {% assign icon_1_url = icon_1 | first | append: '.svg' | file_url %}
      {% assign icon_1_alt = icon_1 | last %}

      {% render "render-image"
        class: "class_image",
        img_src: icon_1_url,
        size: "220 300 400 500",
        alt: icon_1_alt,
        width: "100",
        height: "100"
      %}

      {% if block.settings.icon_1_text != blank %}
        <span>
        {{ block.settings.icon_1_text }}
        </span>
      {% endif %}
    </div>

    {% assign count = count | plus: 1 %}
  {% endif %}

  {% if block.settings.icon_2 != blank %}
