      {% endif %}
    </div>
    {% assign count = count | plus: 1 %}
  {% endif %}

  {% if block.settings.icon_3 != blank %}
    <div class="sellers-buyers__icon">
      {% assign icon_3 = block.settings.icon_3 | split: '|' %}
