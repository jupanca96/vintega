{%- liquid
  assign body_font_light = settings.body_font | font_modify: 'weight', '300'
  assign body_font_regular = settings.body_font | font_modify: 'weight', '400'
  assign body_font_bold = settings.body_font | font_modify: 'weight', '600'
%}

{% style %}
  {{ body_font_light | font_face: font_display: 'swap' }}
  {{ body_font_regular | font_face: font_display: 'swap' }}
  {{ body_font_bold | font_face: font_display: 'swap' }}

  /* ===== Titles font ===== */

  @font-face {
    font-family: 'Larken';
    src: url("{{ 'Larken-Light.eot' | asset_url }}");
    src: url("{{ 'Larken-Light.eot?#iefix' | asset_url }}") format('embedded-opentype'),
        url("{{ 'Larken-Light.woff2' | asset_url }}") format('woff2'),
        url("{{ 'Larken-Light.ttf' | asset_url }}") format('truetype'),
        url("{{ 'Larken-Light.svg#Larken-Light' | asset_url }}") format('svg');
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'Larken';
    src: url("{{ 'Larken-Black.eot' | asset_url }}");
    src: url("{{ 'Larken-Black.eot?#iefix' | asset_url }}") format('embedded-opentype'),
        url("{{ 'Larken-Black.woff2' | asset_url }}") format('woff2'),
        url("{{ 'Larken-Black.ttf' | asset_url }}") format('truetype'),
        url("{{ 'Larken-Black.svg#Larken-Black' | asset_url }}") format('svg');
    font-weight: 900;
    font-style: normal;
    font-display: swap;
  }
{% endstyle %}